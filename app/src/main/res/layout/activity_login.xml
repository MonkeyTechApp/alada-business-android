<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="LoginActivity">

    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_heading"
        android:text="@string/connection"
        style="@style/fontBold"
        android:layout_marginBottom="@dimen/dimen_padding_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txtSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:gravity="center"
        android:lines="2"
        style="@style/fontSemiBold"
        android:layout_marginBottom="@dimen/dimen_padding_big"
        app:layout_constraintTop_toBottomOf="@id/txtHeading"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtFieldName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/txtSlogan"
        app:boxCornerRadiusBottomEnd="@dimen/rounded_corner"
        app:boxCornerRadiusBottomStart="@dimen/rounded_corner"
        app:boxCornerRadiusTopEnd="@dimen/rounded_corner"
        app:boxCornerRadiusTopStart="@dimen/rounded_corner"
        android:hint="@string/name"
        style="@style/TextInputLayoutOutlined">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:inputType="textEmailAddress"
            android:gravity="top|start"
            style="@style/fontRegular"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtFieldEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_padding_small"
        app:layout_constraintTop_toBottomOf="@id/txtFieldName"
        app:boxCornerRadiusBottomEnd="@dimen/rounded_corner"
        app:boxCornerRadiusBottomStart="@dimen/rounded_corner"
        app:boxCornerRadiusTopEnd="@dimen/rounded_corner"
        app:boxCornerRadiusTopStart="@dimen/rounded_corner"
        android:hint="@string/email"
        style="@style/TextInputLayoutOutlined">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:inputType="textPersonName"
            android:gravity="top|start"
            style="@style/fontRegular"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtFieldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_padding_small"
        app:layout_constraintTop_toBottomOf="@id/txtFieldEmail"
        app:boxCornerRadiusBottomEnd="@dimen/rounded_corner"
        app:boxCornerRadiusBottomStart="@dimen/rounded_corner"
        app:boxCornerRadiusTopEnd="@dimen/rounded_corner"
        app:boxCornerRadiusTopStart="@dimen/rounded_corner"
        android:hint="@string/password"
        style="@style/TextInputLayoutOutlined">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:inputType="textPassword"
            android:gravity="top|start"
            style="@style/fontRegular"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtFieldPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_padding_small"
        app:layout_constraintTop_toBottomOf="@id/txtFieldPassword"
        app:boxCornerRadiusBottomEnd="@dimen/rounded_corner"
        app:boxCornerRadiusBottomStart="@dimen/rounded_corner"
        app:boxCornerRadiusTopEnd="@dimen/rounded_corner"
        app:boxCornerRadiusTopStart="@dimen/rounded_corner"
        android:hint="@string/confirm_password"
        style="@style/TextInputLayoutOutlined">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:inputType="textPassword"
            android:gravity="top|start"
            style="@style/fontRegular"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        style="@style/buttonNormal"
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dimen_padding"
        android:layout_marginBottom="@dimen/dimen_padding_med"
        android:text="@string/continue_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
