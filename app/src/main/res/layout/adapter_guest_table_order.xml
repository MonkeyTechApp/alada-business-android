<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_padding_small"
    android:paddingBottom="@dimen/fab_margin"
    android:background="@color/colorBlackBack"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/dimen_padding_small"
    android:layout_marginVertical="@dimen/dimen_padding_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgGuest"
            android:layout_width="@dimen/image_icon_size"
            android:layout_height="@dimen/image_icon_size"
            android:src="@drawable/ic_gues_colored_table"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/guest_table"
            android:layout_marginVertical="@dimen/dimen_padding_mid"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgGuest"
            android:text="@string/guest_table"
            android:gravity="center"
            style="@style/fontSemiBold"
            android:id="@+id/txtTableName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtTableName"
            android:text="@string/guest_table"
            android:gravity="center"
            style="@style/fontRegular"
            android:id="@+id/txtTableSeatsNum"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
