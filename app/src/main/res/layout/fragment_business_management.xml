<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.business.BusinessEditionFragment">

    <LinearLayout
        android:id="@+id/lin_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_management"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:drawableTopCompat="@drawable/ic_guest_colored_table_128"
            android:drawablePadding="@dimen/dimen_padding_small"
            android:layout_marginHorizontal="@dimen/dimen_padding_small"
            android:gravity="center"
            style="@style/fontSemiBold"/>

        <TextView
            android:id="@+id/txtTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tables_management"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            style="@style/fontSemiBold"
            android:gravity="center"
            android:drawablePadding="@dimen/dimen_padding_small"
            android:layout_marginHorizontal="@dimen/dimen_padding_small"
            app:drawableTopCompat="@drawable/ic_guest_colored_table_128" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_2"
        app:layout_constraintTop_toBottomOf="@id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_management"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:drawableTopCompat="@drawable/ic_guest_colored_table_128"
            android:drawablePadding="@dimen/dimen_padding_small"
            android:layout_marginHorizontal="@dimen/dimen_padding_small"
            android:gravity="center"
            style="@style/fontSemiBold"/>

        <TextView
            android:id="@+id/txtOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_list"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            style="@style/fontSemiBold"
            android:gravity="center"
            android:drawablePadding="@dimen/dimen_padding_small"
            android:layout_marginHorizontal="@dimen/dimen_padding_small"
            app:drawableTopCompat="@drawable/ic_guest_colored_table_128" />

    </LinearLayout>

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
