<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dimen_padding"
        android:layout_marginHorizontal="@dimen/dimen_padding"
        android:layout_marginTop="@dimen/dimen_padding"
        style="@style/fontSemiBold"
        android:textColor="@color/white"
        android:text="@string/create_your_first_business_and_start_tracking_key_informations"
        android:id="@+id/txtLegend"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAppearance="@style/fontRegularAppearance"
        app:layout_constraintTop_toBottomOf="@id/txtLegend"
        android:layout_marginHorizontal="@dimen/dimen_padding"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAllCaps="true"
        android:text="@string/create_a_business"
        android:id="@+id/btnCreate"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnCreate"
        android:layout_marginHorizontal="@dimen/dimen_padding"
        android:id="@+id/list"/>

</androidx.constraintlayout.widget.ConstraintLayout>
