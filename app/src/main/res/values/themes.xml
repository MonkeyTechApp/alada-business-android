<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlAdaBusiness" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/fontRegular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowBackground">@color/back_lay</item>-->
    </style>

    <style name="ThemeSplash" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="circle_img_64dp">
        <item name="cornerSize">24dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="rounded_16dp">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="TextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="fontRegular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="fontRegularAppearance" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="fontSemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="textPrice" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_h5</item>
    </style>

    <style name="textPriceImportant" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/flat_red_secondary</item>
        <item name="android:textSize">@dimen/text_h5</item>
    </style>

    <style name="fontBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="buttonNormal" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="buttonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="buttonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ThemeSplash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeSplash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeSplash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
